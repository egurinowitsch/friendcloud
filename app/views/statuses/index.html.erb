<div class="wht_background">
<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-success post_btn" %>

<% @statuses.each do |status| %>
  <div class="status">
    <div class="row">
      <div class="span1">
        <p  class="profile_img">
        <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
      </p>
      </div>
      <div class="span7 status_text">
        <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class="meta time">
         <%=  time_ago_in_words(status.created_at) + " ago" %>
          <span class="admin">
            <% if status.user == current_user %>
            | <%= link_to "Edit", edit_status_path(status) %>
            | <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
            <% end %>
          </span>
        </div>
    </div>
  </div>
</div>

<% end %>